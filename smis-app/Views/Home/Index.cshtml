@{
    ViewData["Title"] = "Home Page";
}
<head>
<body>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
</body>
</head>
<!-- Main Container -->
    <div class="text-center items-center justify-content-center">
        <!-- Main Title -->
        <h1 class="display-4 mb-4 text-white">Welcome to SMIS</h1>

        <!-- Subtitle or Description -->
        <p class="lead mb-5 text-white">
            Your university's student management system.
        </p>

        @if (!User.Identity.IsAuthenticated)
            {
            <!-- Button to Login Page -->
            <a class="btn btn-light btn-lg rounded-pill px-5 py-3" asp-area="Identity" asp-page="/Account/Login">
                Go to Login
                <i class="fas fa-arrow-right ms-2"></i> <!-- Font Awesome right arrow icon -->
            </a>
        }
    </div>
