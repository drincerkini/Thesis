@model SchoolManagmentSystem.ViewModels.EnrollmentViewModel

@{
    ViewData["Title"] = "Enroll in a Course";
}

<div class="container mt-5">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <form asp-action="Enroll" method="post" class="p-4 shadow-sm bg-light rounded">
        <div class="mb-3">
            <label for="courseId" class="form-label">Select a Course:</label>
            <select asp-for="CourseId" class="form-select" asp-items="@(new SelectList(ViewBag.Courses, "Value", "Text"))">
                <option value="">Select a Course</option> <!-- Default option -->
            </select>
            <span asp-validation-for="CourseId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Enroll</button>
    </form>

    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Back to Dashboard</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}