@model SchoolManagmentSystem.Models.Course

@{
    ViewData["Title"] = "Details";
}
<div class="container p-3 bg-light bg-opacity-10 border border-info border-start rounded ">
    <h3 class="d-flex justify-content-center">Course Details</h3>
    <hr />
    <div class="row d-flex justify-content-center ">
        <div class="col-md-4">
            <form asp-action="Create" class="row g-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-md-6">
                    <label asp-for="Title" class="control-label"></label>
                    <input readonly asp-for="Title" class="form-control" placeholder="Name" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="ECTS" class="control-label"></label>
                    <input readonly asp-for="ECTS" class="form-control" placeholder="Surname" />
                    <span asp-validation-for="ECTS" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Department" class="control-label"></label>
                    <input readonly asp-for="Department.Name" class="form-control" placeholder="Department" />
                    <span asp-validation-for="DepartmentID" class="text-danger"></span>
                </div>
            </form>
        </div>
    </div>

    <button class="btn btn btn-light">
        <a class="btn btn-ligt text-secondary" asp-action="Index">Back to List</a>
    </button>

</div>
