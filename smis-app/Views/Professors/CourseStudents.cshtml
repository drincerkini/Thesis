@model IEnumerable<SchoolManagmentSystem.Models.Student>

<h2>Students Enrolled in @ViewBag.CourseName</h2>

@if (!Model.Any())
{
    <p>No students are enrolled in this course.</p>
}
else
{
    <form asp-action="GradeMultipleStudents" method="post" class="mb-4">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Select</th>
                    <th>Student Name</th>
                    <th>Email</th>
                    <th>Grade</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model)
                {
                    <tr>
                        <td>
                            <input type="checkbox" name="selectedStudentIds" value="@student.StudentID" />
                        </td>
                        <td>@student.Name @student.Surname</td>
                        <td>@student.Email</td>
                        <td>
                            <select class="form-control w-25" name="score" required>
                                <option value="" disabled selected>Select</option>
                                @for (int i = 5; i <= 10; i++)
                                {
                                    <option value="@i">@i</option>
                                }
                            </select>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="input-group mb-3">
            <button type="submit" class="btn btn-success">Assign Grade to Selected Students</button>
        </div>
    </form>
}
