@model IEnumerable<SchoolManagmentSystem.Models.Grade>

<h2>Graded Students</h2>

@if (!Model.Any())
{
    <p>No students have been graded yet.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Student Name</th>
                <th>Email</th>
                <th>Course Name</th>
                <th>Grade</th>
                <th>Action</th> <!-- Added Action column -->
            </tr>
        </thead>
        <tbody>
            @foreach (var grade in Model)
            {
                <tr>
                    <td>@grade.Student.Name @grade.Student.Surname</td>
                    <td>@grade.Student.Email</td>
                    <td>@grade.Course.CourseName</td>
                    <td>@grade.Score</td>
                    <td>
                        <!-- Form to remove the grade -->
                        <form asp-action="RemoveGrade" method="post" class="d-inline">
                            <input type="hidden" name="gradeId" value="@grade.GradeId" />
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to remove this grade?');">Remove Grade</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
