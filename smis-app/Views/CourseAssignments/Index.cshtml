@model IEnumerable<SchoolManagmentSystem.Models.CourseAssignment>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Professor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Professor.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Title)
            </td>
                <td>
                    @if (User.IsInRole("Admin") || User.IsInRole("Academic Staff"))
                    {
                        <a class="btn btn-ligt text-secondary" asp-action="Edit" asp-route-id="@item.CourseAssignmentID">Edit</a>
                        <a class="btn btn-ligt text-secondary" asp-action="Details" asp-route-id="@item.CourseAssignmentID">Details</a>
                        <a class="btn btn-ligt text-danger" asp-action="Delete" asp-route-id="@item.CourseAssignmentID">Delete</a>
                    }
                </td>
        </tr>
}
    </tbody>
</table>
