@model List<SchoolManagmentSystem.Areas.Administrator.ViewModel.UserRolesViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Manage";
    Layout = "_AdminLayout";
}

<br />
<h1 class="d-flex justify-content-center" style="color:white;">User Roles</h1>
<hr />
<br />

<table class="table table-striped" style="color:white;">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Action</th>
            <th>Manage Role</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr style="color:white;">
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@string.Join(" , ", user.Roles.ToList())</td>
                <td>
                    <form method="post" asp-action="DeleteUser" asp-route-userId="@user.UserId">
                        <input type="hidden" name="_method" value="DELETE" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
                <td>
                    <a class="btn btn-primary" asp-controller="Adm" asp-action="Manage" asp-route-userId="@user.UserId">Manage Roles</a>
                </td>
            </tr>
        }
    </tbody>
</table>
