@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="container">
    <h3 class="text-center mb-4">@ViewData["Title"]</h3>

    <div class="row justify-content-center">
        <div class="col-md-8 p-4 rounded shadow-sm bg-light">
            <p class="mb-3">
                Your account contains personal data that you have provided. This page allows you to download or delete that data.
            </p>
            <p class="text-danger mb-4">
                <strong>Deleting this data will permanently remove your account, and this action cannot be undone.</strong>
            </p>

            <!-- Download Personal Data -->
            <form id="download-data" asp-page="DownloadPersonalData" method="post" class="mb-3">
                <button class="btn btn-primary w-100" type="submit">Download Personal Data</button>
            </form>

            <!-- Delete Personal Data -->
            <form id="delete-data" asp-page="DeletePersonalData" method="post">
                <button id="delete" class="btn btn-danger w-100" type="submit">Delete Personal Data</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
